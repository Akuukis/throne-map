{
    "compilerOptions": {
        "plugins": [
            {
                "name": "tslint-language-service",
                "alwaysShowRuleFailuresAsWarnings": true,
                "ignoreDefinitionFiles": true,
                "suppressWhileTypeErrorsPresent": true
            }
        ],
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "lib",
        "declaration": false,
        "declarationMap": false,  // required for VSCode "Go To Definition" (shortcut F12).
        "experimentalDecorators": true,
        "incremental": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "strictBindCallApply": true,
        "target": "es6",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019"
        ]
    },
    "include": [
        "src/"
    ]
}
